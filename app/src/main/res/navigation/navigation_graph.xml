<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_graph"
    app:startDestination="@id/optionsFragment">
    <fragment
        android:id="@+id/optionsFragment"
        android:name="com.example.tilesmatch.ui.options.OptionsFragment"
        android:label="OptionsFragment"
        tools:layout="@layout/fragment_options">
        <action
            android:id="@+id/navigateOptionsToGame"
            app:destination="@id/gameFragment" />
    </fragment>
    <fragment
        android:id="@+id/gameFragment"
        android:name="com.example.tilesmatch.ui.game.GameFragment"
        android:label="GameFragment"
        tools:layout="@layout/fragment_game" />
</navigation>